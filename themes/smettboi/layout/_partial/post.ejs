
<div class="post">
    <h4 class="title"><%= post.title %></h4>
    <div class="row">
        <div class="col-md-5">
            <div class="feature-card">
                <!-- <p><small><%= date(post.date, 'M.D.YY') %></small></p> -->
                <div class="cover">
                    <img class="greyscale" src="assets/images/<%= post.cover %>" alt="">
                </div>
                <% if (post.rating) { %>
                    <%- partial('_partial/rating.ejs', { post: post }) %>
                <% } %>
            </div>
        </div>
        <div class="col-md-7">
            <div class="body">
                <%- post.content %>
            </div>
        </div>
    </div>
</div>